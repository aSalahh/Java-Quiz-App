<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#03addc</item>
        <item name="colorPrimaryDark">#03addc</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<style name="radio_button_questions">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">10dp</item>
    <item name="android:orientation">vertical</item>

</style>
    <style name="TextView_for_Questions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#40000000</item>
        <item name="android:textColor">#1D3E5A</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Style_for_options">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#04a9d7</item>
        <item name="android:background">#20000000</item>

    </style>
    <style name="Edit_text_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#04a9d7</item>
        <item name="android:background">#20000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:hint">@string/Hint</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>
